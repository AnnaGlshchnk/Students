<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="groupDao" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.anna.dao.GroupsDao"/>
    </bean>

    <bean id="groupService" class="com.anna.service.GroupsServiceImpl">
        <constructor-arg ref="groupDao"/>
    </bean>

    <bean id="studentDao" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.anna.dao.StudentsDao"/>
    </bean>

    <bean id="studentService" class="com.anna.service.StudentsServiceImpl">
        <constructor-arg ref="studentDao"/>
    </bean>

</beans>