<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mockGroupService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.anna.service.GroupsService"/>
    </bean>

    <bean id="studentService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.anna.service.StudentsService"/>
    </bean>

    <bean id="groupsController" class="com.anna.controller.GroupsController">
        <constructor-arg ref="mockGroupService"/>
    </bean>

    <bean id="studentsController" class="com.anna.controller.StudentsController">
        <constructor-arg ref="studentService"/>
    </bean>
</beans>